doctype 5
html(xmlns="http://www.w3.org/1999/xhtml")
head
  meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
  title 夢蝶內容管理系統
  link(rel='stylesheet', href='/css/screen.css', type='text/css', media='screen', title='default')

  script(src='/js/jquery/jquery-1.4.1.min.js', type='text/javascript')
  script(src='/js/jquery/custom_jquery.js', type='text/javascript')
  script(src='/js/jquery/jquery.pngFix.pack.js', type='text/javascript')
  script(type='text/javascript')
    $(document).ready(function(){
    $(document).pngFix( );
    });
  body#login-bg

    #login-holder

      #logo-login
        a(href='index.html')
          img(src='/images/shared/logo1.png', width='156', height='40', alt='')

      .clear

      #loginbox

        #login-inner
          table(border='0', cellpadding='0', cellspacing='0')
            tr
              th 帳號
              td
                input.login-inp(name='id', type='text', value='admin', onfocus='this.value=\'\'')
            tr
              th 密碼
              td
                input.login-inp(name='password', type='password', value='************', onfocus='this.value=\'\'')
            tr
              th
              td(valign='top')
                input#login-check.checkbox-size(type='checkbox')
                label(for='login-check') 記住帳號與密碼
            tr
              th
              td
                input#login-btn.submit-login(type='button')

        .clear
        a.forgot-pwd(href='') 忘記密碼?
 
      #forgotbox
        #forgotbox-text Please send us your email and we'll reset your password.

        #forgot-inner
          table(border='0', cellpadding='0', cellspacing='0')
            tr
              th Email address:
              td
                input.login-inp(type='text', value='')
            tr
              th  
              td
                input#reset-btn.submit-login(type='button')

        .clear
        a.back-login(href='') Back to login