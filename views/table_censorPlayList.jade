
form#mainform(action='')
      label 截稿時間
      input(class='ugcSearchDateBtn', type='datetime-local', name='TimeStart', onfocus='this.value=\'\'')
      | 到
      input(class='ugcSearchDateBtn', type='datetime-local', name='TimeEnd', onfocus='this.value=\'\'')
      br
      label 播放時間
      input(class='ugcSearchDateBtn', type='datetime-local', name='TimeStart', onfocus='this.value=\'\'')
      | 到
      input(class='ugcSearchDateBtn', type='datetime-local', name='TimeEnd', onfocus='this.value=\'\'')
      input#ugcSearchDateBtn(type='button', class='ugcSearchDate', value='自動配對')

    table#product-table(border='0', width='100%', cellpadding='0', cellspacing='0')
        tr
          th.table-header-repeat.line-left.minwidth-1(width='109')
            a(href='') 播放時間
          th.table-header-repeat.line-left.minwidth-1(width='180')
            a(href='') 人工調整(輸入影片編號)
          th.table-header-repeat.line-left.minwidth-1(width='104')
            a(href='') 影片編號
          th.table-header-repeat.line-left.minwidth-1(width='86')
            a(href='') 主題類別
          th.table-header-repeat.line-left.minwidth-1(width='86')
            a(href='') 上傳素材(文)
          th.table-header-repeat.line-left.minwidth-1(width='81')
            a(href='') 上傳素材(圖)
          th.table-header-repeat.line-left.minwidth-1(width='62')
            a(href='') facebook
          th.table-header-repeat.line-left.minwidth-1(width='78')
            a(href='') facebook照片
          th.table-header-repeat.line-left.minwidth-1(width='69')
            a(href='') 審核結果
          th.table-header-repeat.line-left.minwidth-1(width='120')
            a(href='') 刪除且自動替補

        if(ugcCensorPlayList)
            each PlayList, i in ugcCensorPlayList
                if i%2
                    tr
                      td #{PlayList.doohTimes}
                      td 
                        input(class='ugcChangeBtn', type='text' ,name='ugcChangeText' ,onfocus='this.value=\'\'')
                        input#ugcChangeBtn(type='button', class='ugcChange', value='確認')
                      td #{PlayList.ugcCensorNo}
                      td 
                         if(PlayList.genre == 'miix')
                             label.label_video 合成影片
                         if(PlayList.genre == 'cultural_and_creative')
                             label.label_design 文創
                         if(PlayList.genre == 'mood')
                             label.label_mood 心情
                         if(PlayList.genre == 'check_in')
                             label.label_checkin 打卡
                      td #{PlayList.userContent}
                      td
                        img(src='#{PlayList.userPhotoUrl}', alt='', width='208')
                      td #{PlayList.fb_userName}
                      td
                        img(src='#{PlayList.fbPictureUrl}', alt='', width='100')
                      td #{PlayList.rating}
                      td
                        input#deleteAndAutoUpdate(type='button', value='刪除且自動替補')

                else
                    tr.alternate-row
                      td #{PlayList.doohTimes}
                      td
                        input(class='ugcChangeBtn', type='text' ,name='ugcChangeText' ,onfocus='this.value=\'\'')
                        input#ugcChangeBtn(type='button', class='ugcChange', value='確認')
                      td #{PlayList.ugcCensorNo}
                      td 
                         if(PlayList.genre == 'miix')
                             label.label_video 合成影片
                         if(PlayList.genre == 'cultural_and_creative')
                             label.label_design 文創
                         if(PlayList.genre == 'mood')
                             label.label_mood 心情
                         if(PlayList.genre == 'check_in')
                             label.label_checkin 打卡
                      td #{PlayList.userContent}
                      td
                        img(src='#{PlayList.userPhotoUrl}', alt='', width='208')
                      td #{PlayList.fb_userName}
                      td
                        img(src='#{PlayList.fbPictureUrl}', alt='', width='100')
                      td #{PlayList.rating}
                      td
                        input#deleteAndAutoUpdate(type='button', value='刪除且自動替補')
